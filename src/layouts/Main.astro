---
import { favicon } from "@/lib/config";
import "@/styles/main.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<!doctype html>
<html lang="en">
  <head>
    <base href={`${base}/`} />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      href={`data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 100 100%22><text y=%22.9em%22 font-size=%2290%22>${favicon}</text></svg>`}
    />
    <title>{title}</title>
  </head>
  <body class="dark">
    <nav>
      <ul>
        <a href="./">Home</a>
        <a href="./about">About</a>
        <a href="./settings">Settings</a>
      </ul>
      <ul>
        <a href="https://github.com/lokimckay/civitai-model-browser">Github</a>
      </ul>
    </nav>
    <slot />
  </body>
</html>
